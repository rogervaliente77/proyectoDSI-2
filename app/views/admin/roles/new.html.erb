<!-- Begin Page Content -->
<div class="container-fluid">
  <h1 class="h3 mb-4 text-gray-800">Crear Nuevo Rol</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with model: [:admin, @role], local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "Nombre del Rol" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "DescripciÃ³n" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <%= f.submit "Guardar Rol", class: "btn btn-primary" %>
    <%= link_to "Cancelar", admin_roles_path, class: "btn btn-secondary" %>
  <% end %>
</div>
