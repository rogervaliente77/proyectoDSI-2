<div class="container mt-4">
  <h2>Detalles del Código de Descuento</h2>

  <p><strong>Código:</strong> <%= @discount_code.value %></p>
  <p><strong>Descuento:</strong> <%= "#{@discount_code.discount}%" %></p>
  <p><strong>Fecha de vencimiento:</strong> <%= @discount_code.due_date&.strftime("%d/%m/%Y") %></p>
  <p><strong>Producto:</strong> <%= Product.where(id: @discount_code.product_id).first&.name || "Sin producto" %></p>

  <%= link_to "Volver", admin_discount_codes_path, class: "btn btn-secondary" %>
</div>
