<div class="container mt-4">
  <h1 class="mb-4">C贸digos de Descuento</h1>

  <!-- Bot贸n Nuevo C贸digo -->
  <div class="mb-3">
    <% if @current_user.role.name != "cajero" %>
      <%= link_to "Nuevo C贸digo", new_admin_discount_code_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <!-- Tabla de c贸digos en Card -->
  <div class="card shadow-sm rounded-4 border-0" style="background-color: #f8f9fa;">
    <div class="card-body p-0">
      <div class="table-responsive">
        <div class="table-responsive">
<table class="table table-striped table-hover align-middle mb-0">
          <thead class="bg-gradient text-white text-uppercase small">
            <tr>
              <th>C贸digo</th>
              <th>Descuento</th>
              <th>Fecha de Vencimiento</th>
              <th>Producto</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @discount_codes.each do |code| %>
              <tr class="align-middle" style="transition: all 0.2s;">
                <td class="text-monospace"><%= code.value %></td>
                <td>
                  <span class="badge bg-success text-white"><%= code.discount %>%</span>
                </td>
                <td>
                  <% if code.due_date.present? && code.due_date < Date.today %>
                    <span class="badge bg-danger text-white">
                      <%= code.due_date.strftime("%d/%m/%Y") %> (Vencido)
                    </span>
                  <% else %>
                    <span class="badge bg-secondary text-white">
                      <%= code.due_date&.strftime("%d/%m/%Y") || "Sin fecha" %>
                    </span>
                  <% end %>
                </td>
                <td><%= code.product&.name || "Sin producto" %></td>
                <td class="text-center">
                  <div class="d-flex justify-content-center gap-2 flex-nowrap">
                    <% if @current_user.role.name != "cajero" %>
                      <!-- Ver -->
                      <%= link_to admin_discount_code_path(code),
                            class: "btn btn-sm btn-outline-primary",
                            title: "Ver" do %>
                        <i class="fa fa-eye"></i>
                      <% end %>

                      <!-- Editar -->
                      <%= link_to edit_admin_discount_code_path(code),
                            class: "btn btn-sm btn-outline-warning",
                            title: "Editar" do %>
                        <i class="fa fa-pencil-alt"></i>
                      <% end %>

                      <!-- Eliminar -->
                      <%= button_to admin_discount_code_path(code),
                            method: :delete,
                            form: { class: "d-inline" },
                            data: { turbo_confirm: "驴Est谩s seguro de eliminar este c贸digo?" },
                            class: "btn btn-sm btn-outline-danger",
                            title: "Eliminar" do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
</div>
      </div>
    </div>
  </div>
</div>

<!--  Estilos Profesionales -->
<style>
  body { font-size: 0.9rem; }
  h1 { font-size: 1.5rem; font-weight: 600; }

  /* Card hover */
  .card:hover {
    box-shadow: 0 6px 18px rgba(0,0,0,0.12);
  }

  /* Filas tabla al pasar el mouse */
  .table-hover tbody tr:hover {
    background-color: #e9ecef;
    transform: translateX(1px);
  }

  /* Botones de acci贸n */
  .btn-outline-primary,
  .btn-outline-warning,
  .btn-outline-danger {
    transition: all 0.2s;
  }
  .btn-outline-primary:hover {
    background-color: #0d6efd;
    color: #fff;
    border-color: #0d6efd;
  }
  .btn-outline-warning:hover {
    background-color: #ffc107;
    color: #212529;
    border-color: #ffc107;
  }
  .btn-outline-danger:hover {
    background-color: #dc3545;
    color: #fff;
    border-color: #dc3545;
  }

  /* Responsividad */
  @media (max-width: 768px) {
    body { font-size: 0.8rem; }
    h1 { font-size: 1.3rem; }
    .btn-sm { font-size: 0.75rem; padding: 0.3rem 0.5rem; }
    .badge { font-size: 0.8rem; padding: 0.35em 0.6em; }
  }
</style>
