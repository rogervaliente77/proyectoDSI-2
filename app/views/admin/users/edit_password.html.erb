<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between mb-4 gap-2">
    <h1 class="h3 mb-2 mb-sm-0 text-gray-800">Settings</h1>
    <%= link_to admin_users_path, class: "btn btn-sm btn-primary shadow-sm" do %>
      <i class="fas fa-arrow-left fa-sm text-white-50 me-1"></i> Volver a usuarios
    <% end %>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2">
          <h6 class="m-0 font-weight-bold text-primary">Cambiar Contraseña</h6>
        </div>

        <!-- Card Body -->
        <div class="card-body">
          <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% elsif flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <%= simple_form_for @user, 
                url: admin_user_update_password_path(@user),
                method: :patch, 
                html: { class: "needs-validation", novalidate: false }, 
                data: { turbo: false } do |form| %>

            <div class="row g-3">
              <div class="col-12 col-md-6">
                <%= form.input :password, label: "Contraseña", required: true, input_html: { class: "form-control" } %>
              </div>
              <div class="col-12 col-md-6">
                <%= form.input :password_confirmation, label: "Confirme la contraseña", required: true, input_html: { class: "form-control" } %>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col-12 col-md-3">
                <%= form.submit 'Guardar', class: 'btn btn-success w-100' %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
