<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between mb-4 gap-2">
    <h1 class="h3 mb-2 mb-sm-0 text-gray-800">Dashboard</h1>
    <%= link_to new_admin_user_path, class: "btn btn-sm btn-primary shadow-sm" do %>
      <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Crear Usuario
    <% end %>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2">
          <h6 class="m-0 font-weight-bold text-primary">Gestión de Roles de Usuario</h6>
          <div class="dropdown">
            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
               data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
              <li><h6 class="dropdown-header">Opciones</h6></li>
              <li><%= link_to "Acción 1", "#", class: "dropdown-item" %></li>
              <li><%= link_to "Acción 2", "#", class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Algo más", "#", class: "dropdown-item" %></li>
            </ul>
          </div>
        </div>

        <!-- Card Body -->
        <div class="card-body p-2 p-md-3">
          <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% elsif flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <div class="table-responsive">
<table class="table table-bordered" id="usersTable">
            <thead class="thead-light">
              <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol actual</th>
                <th>Acción</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <th style="width: 25%;">Nombre</th>
                  <th style="width: 30%;">Email</th>
                  <th style="width: 20%;">Rol actual</th>
                  <th style="width: 25%;">Acción</th>
                </tr>
              <% end %>
            </tbody>
          </table>
</div>
        </div>

      </div>
    </div>
  </div>
</div>
