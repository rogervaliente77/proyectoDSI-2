<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    
    <%= link_to admin_cajeros_new_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
      <i class="fas fa-plus fa-sm text-white-50"></i> Crear cajero
    <% end %>
  </div>

  <!-- Content Row -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Gestión de cajeros</h6>
        </div>

        <!-- Card Body -->
        <div class="card-body">

          <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% elsif flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <!-- Tabla responsive -->
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead class="thead-light">
                <tr>
                  <th>No</th>
                  <th>Nombre</th>
                  <th>Cajero</th>
                  <th>Caja</th>
                  <th>F. Creación</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @cajeros.each_with_index do |cajero, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= cajero.user.full_name %></td>
                    <td><%= cajero.nombre %></td>
                    <td><%= cajero.caja.nombre %></td>
                    <td><%= l(cajero.created_at, format: :short) %></td>
                    <td>
                      <div class="d-flex gap-1 flex-wrap">
                        <%= link_to admin_cajeros_edit_path(id: cajero.id), class: "btn btn-sm btn-primary flex-shrink-0" do %>
                          <i class="fa fa-edit"></i> Editar
                        <% end %>

                        <%= button_to admin_cajeros_path(cajero), method: :delete,
                              form: { class: "d-inline" },
                              data: { turbo_confirm: "¿Estás seguro de eliminar este cajero?" },
                              class: "btn btn-sm btn-danger flex-shrink-0" do %>
                          <i class="fa fa-trash"></i> Eliminar
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- Fin tabla responsive -->

        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
