<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Editar cajero</h1>

    <%= link_to admin_cajeros_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
      <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver a cajeros
    <% end %>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Detalles del cajero</h6>
        </div>

        <!-- Card Body -->
        <div class="card-body">
          <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% elsif flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <%= simple_form_for :cajero, url: admin_cajeros_update_path(id: @cajero.id), method: :patch, html: { class: "needs-validation", novalidate: false } do |form| %>
            <div class="row g-3">
              <div class="col-12 col-md-4">
                <%= form.input :nombre, label: "Nombre", required: true, input_html: { class: "form-control" } %>
              </div>

              <div class="col-12 col-md-4">
                <%= form.label :user_id, "Usuario (cajero)" %>
                <p class="form-control-plaintext"><%= @cajero.user.full_name %></p>
                <%= form.hidden_field :user_id %>
              </div>

              <div class="col-12 col-md-4">
                <%= form.label :caja_id, "Caja asignada" %>
                <p class="form-control-plaintext"><%= @cajero.caja.nombre %></p>
                <%= form.hidden_field :caja_id %>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col-12 col-md-4">
                <%= form.submit 'Guardar', class: 'btn btn-success w-100' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
