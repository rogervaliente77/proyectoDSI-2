<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <span class="h3 text-gray-800"><%= link_to "Home /", portal_home_path, data: {turbo: false} %></span>
            <span class="h4 text-gray-800"><%= link_to "  Documentos /", admin_documentos_path, data: {turbo: false} %></span>
            <span class="h5 text-gray-800"><%= link_to "  Review #{@document.correlative_code}", admin_documentos_new_path, data: {turbo: false} %></span>

        </div>

        <%= link_to admin_documentos_path, class: "d-none d-sm-inline-block btn btn-info shadow-sm", data: {turbo: false} do %>
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Regresar
        <% end %>
    </div>

    <!-- Content Row -->

    <div class="row">
        <!-- Border Bottom Utilities -->
        <div class="col-lg-8">
            <div class="card mb-4 py-3 border-bottom-primary">
                <div class="card-body">                   
                    <div class="workflow-container">
                        <div class="workflow-step completed">
                            <div class="step-icon">1</div>
                            <div class="step-content">
                            <h4>Revisión</h4>
                            <p>Un analista evalúa el documento.</p>
                            </div>
                        </div>
                        <div class="workflow-step current">
                            <div class="step-icon">2</div>
                            <div class="step-content">
                            <h4>Revisión</h4>
                            <p>Un analista evalúa el documento.</p>
                            </div>          
                        </div>
                        
                        <div class="workflow-step pending">
                            <div class="step-icon">3</div>
                            <div class="step-content">
                            <h4>Revisión</h4>
                            <p>Un analista evalúa el documento.</p>
                            </div>
                        </div>
                        <div class="workflow-step">
                        <div class="step-icon">4</div>
                        <div class="step-content">
                            <h4>Aprobación</h4>
                            <p>Se aprueba si cumple con los criterios.</p>
                        </div>
                        </div>
                        <div class="workflow-step">
                        <div class="step-icon">5</div>
                        <div class="step-content">
                            <h4>Finalización</h4>
                            <p>El flujo se cierra y se notifica al usuario.</p>
                        </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 py-3 border-bottom-secondary">
                <div class="card-body">
                    .border-bottom-secondary
                </div>
            </div>

            <div class="card mb-4 py-3 border-bottom-success">
                <div class="card-body">
                    .border-bottom-success
                </div>
            </div>

            <div class="card mb-4 py-3 border-bottom-info">
                <div class="card-body">
                    .border-bottom-info
                </div>
            </div>

            <div class="card mb-4 py-3 border-bottom-warning">
                <div class="card-body">
                    .border-bottom-warning
                </div>
            </div>

            <div class="card mb-4 py-3 border-bottom-danger">
                <div class="card-body">
                    .border-bottom-danger
                </div>
            </div>

            <div class="card mb-4 py-3 border-bottom-dark">
                <div class="card-body">
                    .border-bottom-dark
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

<style>
        /* Paso base */
.step-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin-right: 1rem;
  font-size: 1.2rem;
  background-color: #ccc;
  color: white;
}

/* Paso completado (verde) */
.workflow-step.completed .step-icon {
  background-color: #28a745;
}

/* Paso actual (azul + animación pulsante) */
.workflow-step.current .step-icon {
  background-color: #007bff;
  animation: pulse 1.5s infinite;
}

/* Paso pendiente (gris - ya es el default) */

/* Animación de entrada (como antes) */
.workflow-step {
  display: flex;
  align-items: flex-start;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.6s forwards;
  animation-delay: var(--delay, 0s);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Nueva animación: pulso / latido */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(0, 123, 255, 0.7);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 0 0 8px rgba(0, 123, 255, 0);
  }
}

/* Responsive */
@media (max-width: 500px) {
  .workflow-step {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .step-icon {
    margin-bottom: 0.5rem;
    margin-right: 0;
  }
}


</style>