<!-- Begin Page Content -->
<div class="container-fluid min-vh-100 py-4">
  <!-- Page Heading -->
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4">
    <h1 class="h3 text-gray-800 mb-3 mb-md-0">Admin / Categorías de producto</h1>
    <%= link_to new_admin_category_path, class: "btn btn-primary shadow-sm" do %>
      <i class="fas fa-plus me-1"></i> Crear Categoría
    <% end %>
  </div>

  <!-- Card -->
  <div class="card shadow-sm border-0">
    <!-- Card Header -->
    <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between border-bottom">
      <h6 class="m-0 fw-bold text-primary">Gestión de Categorías</h6>
    </div>

    <!-- Card Body -->
    <div class="card-body p-3 p-md-4">

      <!-- Flash Messages -->
      <% if flash[:notice] %>
        <div class="alert alert-success rounded-3"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger rounded-3"><%= sanitize(flash[:alert]) %></div>
      <% end %>

      <!-- Tabla responsive -->
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th class="text-start">Nombre</th>
              <th class="text-start">Descripción</th>
              <th class="text-center">Creado en</th>
              <th class="text-center">Acción</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td class="text-center"><%= category.created_at.strftime("%d/%m/%Y") if category.created_at %></td>
                <td class="text-center">
                  <div class="d-flex justify-content-center gap-2 flex-wrap">
                    <%= link_to edit_admin_category_path(category), class: "btn btn-sm btn-outline-primary", data: { turbo: false } do %>
                      <i class="fa fa-edit me-1"></i> Editar
                    <% end %>

                    <%= link_to admin_category_path(category),
                            class: "btn btn-sm btn-outline-danger",
                            data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar esta categoría?" } do %>
                      <i class="fa fa-trash me-1"></i> Eliminar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
<!-- /.container-fluid -->
