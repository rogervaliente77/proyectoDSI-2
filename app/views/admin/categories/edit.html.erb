<!-- Begin Page Content -->
<div class="container-fluid py-4">
  <!-- Page Heading -->
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4">
    <h1 class="h3 text-gray-800 mb-3 mb-md-0">Editar categoría</h1>
    <%= link_to admin_categories_path, class: "btn btn-primary shadow-sm" do %>
      <i class="fas fa-arrow-left me-1"></i> Volver a categorías
    <% end %>
  </div>

  <!-- Card -->
  <div class="card shadow-sm rounded-3 border-0">
    <div class="card-header bg-white py-3 d-flex align-items-center justify-content-between border-bottom">
      <h6 class="m-0 fw-bold text-primary">Formulario de edición de categoría</h6>
      <div class="dropdown no-arrow">
        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
          <div class="dropdown-header">Opciones</div>
          <a class="dropdown-item" href="#">Otra acción</a>
        </div>
      </div>
    </div>

    <div class="card-body p-4">
      <% if flash[:notice] %>
        <div class="alert alert-success rounded-3"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger rounded-3"><%= flash[:alert] %></div>
      <% end %>

      <%= simple_form_for :category, url: admin_category_path(@category), method: :patch,
                          html: { class: "needs-validation", id: "form-edit-category", novalidate: false },
                          data: { turbo: false } do |form| %>
        
        <div class="mb-3">
          <%= form.input :name, label: "Nombre", required: true, input_html: { class: "form-control form-control-lg" } %>
        </div>

        <div class="mb-3">
          <%= form.input :description, as: :text, label: "Descripción", required: false,
                          input_html: { class: "form-control", rows: 4, style: "resize: vertical;" } %>
        </div>

        <div class="d-flex justify-content-start gap-2">
          <%= form.submit 'Actualizar', class: 'btn btn-success' %>
          <%= link_to 'Cancelar', admin_categories_path, class: 'btn btn-secondary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const form = document.getElementById("form-edit-category");
  form.addEventListener("submit", function (event) {
    if (!form.checkValidity()) {
      event.preventDefault();
      event.stopPropagation();
    }
    form.classList.add("was-validated");
  });
});
</script>
