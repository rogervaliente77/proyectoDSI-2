<!-- CSS para el fondo y cards -->
<style>
  /* Fondo degradado profesional */
  .dashboard-bg {
    background: linear-gradient(135deg, #f0f4f8 0%, #e2e8f0 100%);
    min-height: 100vh;
  }

  /* Colores suaves y hover */
  .bg-light-soft {
    background-color: #ffffff;
    transition: background-color 0.3s ease, transform 0.3s, box-shadow 0.3s;
  }
  .report-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.15);
    background-color: #f1f3f5;
  }
  .report-icon {
    font-size: 3rem;
    transition: transform 0.3s;
  }
  .report-card:hover .report-icon {
    transform: scale(1.2);
  }
  .btn-outline-secondary {
    border-color: #6c757d;
    color: #495057;
    transition: all 0.2s;
  }
  .btn-outline-secondary:hover {
    background-color: #495057;
    color: #fff;
    border-color: #495057;
  }

  /* Scroll horizontal para m√≥viles */
  .row.flex-nowrap {
    -webkit-overflow-scrolling: touch;
    overflow-x: auto;
    scroll-behavior: smooth;
  }
  .row.flex-nowrap::-webkit-scrollbar {
    height: 6px;
  }
  .row.flex-nowrap::-webkit-scrollbar-thumb {
    background: rgba(0,0,0,0.2);
    border-radius: 3px;
  }

  /* Responsive */
  @media (max-width: 576px) {
    .report-icon {
      font-size: 2.5rem;
    }
    .card-text {
      font-size: 0.85rem;
    }
    .card-body {
      padding: 1rem !important;
    }
  }
</style>
