<!-- app/views/admin/products/index.html.erb -->
<div class="container-fluid">
  <!-- Encabezado -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      <%= @current_user.role.in?(["super_admin","admin","cajero"]) ? "Admin - Productos" : "Portal - Productos" %>
    </h1>

    <% if @current_user.role.in?(["super_admin","admin"]) %>
      <%= link_to admin_productos_new_path, class: "btn btn-sm btn-primary shadow-sm" do %>
        <i class="fas fa-plus"></i> Crear Producto
      <% end %>
    <% end %>
  </div>

  <!-- Productos -->
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100 shadow-sm position-relative product-card">

          <!-- Badge de disponibilidad siempre visible -->
          <% if product.quantity.to_i > 0 %>
            <span class="badge bg-success">Disponible</span>
          <% else %>
            <span class="badge bg-secondary">Agotado</span>
          <% end %>

          <!-- Carrusel hover-driven -->
          <div class="custom-carousel">
            <% images = product.product_images.select { |img| img.image_url.present? }.sort_by(&:image_index) %>
            <% if images.any? %>
              <% images.each_with_index do |img, index| %>
                <img src="<%= img.image_url %>" 
                     class="carousel-image <%= 'active' if index.zero? %>" 
                     alt="<%= product.name %> imagen <%= index+1 %>">
              <% end %>
              <!-- Botones de navegación -->
              <button class="prev" onclick="prevSlide(this)">‹</button>
              <button class="next" onclick="nextSlide(this)">›</button>
              <!-- Indicadores -->
              <div class="carousel-indicators">
                <% images.each_with_index do |img, index| %>
                  <span class="dot <%= 'active' if index.zero? %>" onclick="goToSlide(this, <%= index %>)"></span>
                <% end %>
              </div>
            <% else %>
              <img src="https://via.placeholder.com/220x180" class="carousel-image active" alt="Placeholder">
            <% end %>
          </div>

          <!-- Información del producto -->
          <div class="card-body">
          <h5 class="card-title text-primary fw-bold mb-1"><%= product.name %></h5>
          <p class="card-text text-muted small mb-2"><%= truncate(product.description, length:80) %></p>
          
           <!-- Precio del producto -->
            <p class="mt-2 mb-2">
              <% if product.discount.to_i > 0 %>
                <span class="text-muted text-decoration-line-through">
                  <%= number_to_currency(product.price) %>
                </span>
                <br>
                <span class="fw-bold text-success fs-5">
                  <%= number_to_currency(product.discounted_price.round) %>
                </span>
                <span class="fw-bold text-success fs-5">
                  (-<%= product.discount %>%)
                </span>
              <% else %>
                <span class="fw-bold fs-5">
                  <%= number_to_currency(product.price) %>
                </span>
              <% end %>
            </p>
    
          <p class="mb-0"><strong>Disponibilidad:</strong> <%= product.quantity %></p>
          <p class="mb-0"><strong>Categoria:</strong> <%= product.category.name.upcase if product.category %></p>
          <p class="mb-0"><strong>Codigo:</strong> <%= product.code %></p>
  </div>

          <!-- Botones de acción -->
          <% if @current_user.role.in?(["super_admin","admin"]) %>
            <div class="btn-group w-100 mt-2">
              <%= link_to admin_edit_product_path(product_id:product.id), class:"btn btn-primary btn-sm" do %>
                <i class="fa fa-edit"></i> Editar
              <% end %>
              <%= link_to admin_destroy_product_path(product_id:product.id), class:"btn btn-danger btn-sm", data:{ turbo_method: :delete }, onclick:"return confirm('¿Eliminar producto?');" do %>
                <i class="fa fa-trash"></i> Eliminar
              <% end %>
            </div>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Estilos del carrusel y badge -->
<style>
.custom-carousel {
  position: relative;
  width: 100%;
  height: 220px; /* más alto para visibilidad */
  overflow: hidden;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.15);
  margin-bottom: 10px;
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
  z-index: 1;
}

.carousel-image.active {
  opacity: 1;
  z-index: 1;
}

/* Badge siempre visible */
.badge {
  position: absolute !important;
  top: 0.5rem;
  right: 0.5rem;
  z-index: 10; /* siempre encima del carrusel */
  padding: 0.4rem 0.7rem;
  font-size: 0.85rem;
}

/* Botones */
.custom-carousel button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0,0,0,0.5);
  color: white;
  border: none;
  padding: 0.4rem 0.8rem;
  cursor: pointer;
  font-size: 1.4rem;
  border-radius: 50%;
  z-index: 2;
  transition: background 0.3s;
}

.custom-carousel button:hover {
  background: rgba(0,0,0,0.7);
}

.custom-carousel .prev { left: 8px; }
.custom-carousel .next { right: 8px; }

/* Indicadores */
.carousel-indicators {
  position: absolute;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 6px;
  z-index: 2;
}

.carousel-indicators .dot {
  width: 10px;
  height: 10px;
  background: rgba(255,255,255,0.6);
  border-radius: 50%;
  cursor: pointer;
  transition: background 0.3s;
}

.carousel-indicators .dot.active {
  background: rgba(255,255,255,1);
}
</style>

<!-- Script del carrusel hover-driven -->
<script>
function showSlide(carousel, index) {
  const slides = carousel.querySelectorAll('.carousel-image');
  const dots = carousel.querySelectorAll('.dot');
  slides.forEach((s, i) => s.classList.toggle('active', i === index));
  dots.forEach((d, i) => d.classList.toggle('active', i === index));
  carousel.dataset.current = index;
}

function nextSlide(btn) {
  const carousel = btn.closest('.custom-carousel');
  let index = parseInt(carousel.dataset.current || 0);
  const slides = carousel.querySelectorAll('.carousel-image');
  showSlide(carousel, (index + 1) % slides.length);
}

function prevSlide(btn) {
  const carousel = btn.closest('.custom-carousel');
  let index = parseInt(carousel.dataset.current || 0);
  const slides = carousel.querySelectorAll('.carousel-image');
  showSlide(carousel, (index - 1 + slides.length) % slides.length);
}

function goToSlide(dot, index) {
  const carousel = dot.closest('.custom-carousel');
  showSlide(carousel, index);
}

// Hover-driven autoplay
document.addEventListener("DOMContentLoaded", function() {
  document.querySelectorAll('.product-card').forEach(card => {
    let interval = null;
    const carousel = card.querySelector('.custom-carousel');
    if (!carousel) return;

    card.addEventListener('mouseenter', () => {
      let index = parseInt(carousel.dataset.current || 0);
      interval = setInterval(() => {
        const slides = carousel.querySelectorAll('.carousel-image');
        index = (index + 1) % slides.length;
        showSlide(carousel, index);
      }, 2000); // cada 2 segundos
    });

    card.addEventListener('mouseleave', () => {
      clearInterval(interval);
    });
  });
});
</script>
