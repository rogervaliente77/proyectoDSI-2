<div class="container-fluid">

  <!-- Encabezado -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      <% if @current_user.role.name.in?(["super_admin","admin","cajero"]) %>
        <i class="fas fa-boxes me-2"></i> Admin - Productos
      <% else %>
        <i class="fas fa-store me-2"></i> Portal - Productos
      <% end %>
    </h1>

    <% if @current_user.role.name.in?(["super_admin","admin"]) %>
      <%= link_to admin_productos_new_path, class: "btn btn-sm btn-primary shadow-sm" do %>
        <i class="fas fa-plus-circle me-1"></i> Crear Producto
      <% end %>
    <% end %>
  </div>

  <!-- Filtros -->
  <div class="card p-3 mb-4 shadow-sm rounded-3 border-0 bg-light">
    <%= form_with url: admin_productos_path, method: :get, local: true, class: "row g-2 align-items-end justify-content-between flex-nowrap flex-lg-wrap" do %>
      
      <div class="col-auto flex-grow-1">
        <label class="form-label small text-dark fw-semibold"><i class="fas fa-search me-1"></i> Buscar</label>
        <%= text_field_tag :query, params[:query], placeholder: "Ej. Camiseta, Laptop...", class: "form-control filter-input" %>
      </div>

      <div class="col-auto">
        <label class="form-label small text-dark fw-semibold"><i class="fas fa-tags me-1"></i> Categoría</label>
        <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), include_blank: "Seleccione...", class: "form-select filter-select" %>
      </div>

      <div class="col-auto">
        <label class="form-label small text-dark fw-semibold"><i class="fas fa-industry me-1"></i> Marca</label>
        <%= select_tag :marca_id, options_from_collection_for_select(@marcas, :id, :name, params[:marca_id]), include_blank: "Seleccione...", class: "form-select filter-select" %>
      </div>

      <div class="col-auto">
        <label class="form-label small text-dark fw-semibold"><i class="fas fa-dollar-sign me-1"></i> Precio ($)</label>
        <div class="d-flex gap-2 align-items-center">
          <input type="number" name="min_price" value="<%= params[:min_price] || '' %>" class="form-control filter-input" placeholder="Min" min="0" style="width: 80px;">
          <span class="text-muted fw-bold">-</span>
          <input type="number" name="max_price" value="<%= params[:max_price] || '' %>" class="form-control filter-input" placeholder="Max" min="0" style="width: 80px;">
        </div>
      </div>

      <div class="col-auto">
        <label class="form-label small text-dark fw-semibold"><i class="fas fa-gift me-1"></i> Oferta</label>
        <%= select_tag :offer, options_for_select([["Descuento", "descuento"], ["2x1", "2x1"], ["3x1", "3x1"], ["Mayoreo", "mayoreo"]], params[:offer]), include_blank: "Seleccione...", class: "form-select filter-select" %>
      </div>

      <div class="col-auto d-flex gap-2 mt-3 mt-lg-0 align-items-end">
        <%= submit_tag "Aplicar", class: "btn btn-primary btn-md" %>
        <%= link_to admin_productos_path, class: "btn btn-outline-secondary btn-md" do %>
          <i class="fas fa-sync-alt me-1"></i> Limpiar
        <% end %>
      </div>

    <% end %>
  </div>

  <!-- Productos -->
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card h-100 shadow-sm product-card position-relative border-0 rounded-3 overflow-hidden">

          <!-- Badges -->
          <% if product.quantity.to_i > 0 %>
            <span class="badge badge-top-right bg-success">
              <i class="fas fa-check-circle me-1"></i> Disponible
            </span>
          <% else %>
            <span class="badge badge-top-right bg-secondary">
              <i class="fas fa-times-circle me-1"></i> Agotado
            </span>
          <% end %>

          <% if product.discount.to_i > 0 || product.offer_type.present? %>
            <span class="badge badge-top-left bg-warning text-dark">
              <i class="fas fa-gift me-1"></i> Oferta 
              <%= " #{product.offer_type.capitalize}" if product.offer_type.present? %>
            </span>
          <% end %>

          <!-- Carrusel -->
          <div class="custom-carousel" data-current="0">
            <% images = product.product_images.select { |img| img.image_url.present? }.sort_by(&:image_index) %>
            <% if images.any? %>
              <% images.each_with_index do |img, index| %>
                <img src="<%= img.image_url %>" 
                     class="carousel-image <%= 'active' if index.zero? %>" 
                     alt="<%= product.name %> imagen <%= index+1 %>">
              <% end %>
              <button class="prev" onclick="prevSlide(this)">‹</button>
              <button class="next" onclick="nextSlide(this)">›</button>
              <div class="carousel-indicators">
                <% images.each_with_index do |img, index| %>
                  <span class="dot <%= 'active' if index.zero? %>" onclick="goToSlide(this, <%= index %>)"></span>
                <% end %>
              </div>
            <% else %>
              <img src="https://via.placeholder.com/300x240" class="carousel-image active" alt="Placeholder">
            <% end %>
          </div>

          <!-- Información -->
          <div class="card-body">
            <h5 class="card-title text-primary fw-bold mb-1"><%= product.name %></h5>
            <p class="card-text text-muted small mb-2"><%= truncate(product.description, length:80) %></p>

            <% if product&.discount&.to_i > 0 && product&.offer_type == "mayoreo" %>
              <p class="small mb-1"><strong>Precio mayoreo a partir de <%= product.wholesale_quantity %></strong></p>
            <% end %>

            <p class="mb-2">
              <% if product.discount.to_i > 0 %>
                <% if product.offer_type == "descuento"%>
                  <span class="text-muted text-decoration-line-through"><%= number_to_currency(product.price) %></span>
                  <span class="badge bg-success ms-2"><%= product.discount %>% OFF</span><br>
                <% end %>
                <span class="fw-bold text-success fs-5"><%= number_to_currency(product.discounted_price.round(2)) %></span>
              <% else %>
                <span class="fw-bold fs-5"><%= number_to_currency(product.price) %></span>
              <% end %>
            </p>

            <p class="mb-0"><strong>Disponibilidad:</strong> <%= product.quantity %></p>
            <p class="mb-0"><strong>Categoría:</strong> <%= product.category.name.upcase if product.category %></p>
            <p class="mb-0"><strong>Marca:</strong> <%= product.marca.name.upcase if product.marca %></p>
            <p class="mb-0"><strong>Código:</strong> <%= product.code %></p>
          </div>

          <!-- Botones -->
          <% if @current_user.role.name.in?(["super_admin","admin"]) %>
            <div class="btn-group w-100 p-2">
              <%= link_to admin_edit_product_path(product_id: product.id), class:"btn btn-primary btn-sm" do %>
                <i class="fa fa-edit"></i> Editar
              <% end %>
              <%= link_to admin_destroy_product_path(product_id: product.id), class:"btn btn-danger btn-sm", data:{ turbo_method: :delete }, onclick:"return confirm('¿Eliminar producto?');" do %>
                <i class="fa fa-trash"></i> Eliminar
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Estilos -->
<style>
.product-card {
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}
.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 18px rgba(0,0,0,0.15);
}

.badge-top-right, .badge-top-left {
  position: absolute;
  top: 10px;
  padding: 0.4rem 0.6rem;
  font-size: 0.8rem;
  z-index: 3;
  border-radius: 0.4rem;
}
.badge-top-right { right: 10px; }
.badge-top-left { left: 10px; }

.custom-carousel {
  position: relative;
  width: 100%;
  padding-top: 75%;
  background-color: #f8f9fa;
  overflow: hidden;
}
.carousel-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  background: #fff;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
}
.carousel-image.active { opacity: 1; }

.custom-carousel button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0,0,0,0.5);
  color: white;
  border: none;
  padding: 0.3rem 0.6rem;
  cursor: pointer;
  font-size: 1.2rem;
  border-radius: 50%;
  z-index: 2;
  transition: background 0.3s;
}
.custom-carousel button:hover { background: rgba(0,0,0,0.7); }
.prev { left: 8px; }
.next { right: 8px; }

.carousel-indicators {
  position: absolute;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 5px;
  z-index: 2;
}
.carousel-indicators .dot {
  width: 10px;
  height: 10px;
  background: rgba(255,255,255,0.6);
  border-radius: 50%;
  cursor: pointer;
  transition: background 0.3s;
}
.carousel-indicators .dot.active { background: rgba(255,255,255,1); }

.filter-input, .filter-select {
  border-radius: 0.5rem;
  border: 1px solid #ced4da;
  padding: 0.45rem 0.75rem;
  font-size: 0.9rem;
  transition: all 0.25s ease;
  background-color: #fff;
}
.filter-input:focus, .filter-select:focus {
  border-color: #0d6efd;
  box-shadow: 0 0 8px rgba(13,110,253,0.2);
  outline: none;
}

@media (max-width: 992px) {
  .row.flex-nowrap { flex-wrap: wrap !important; }
  .col-auto { flex: 1 1 100% !important; }
  .col-auto.d-flex { justify-content: flex-start; gap: 0.5rem; }
}
</style>

<!-- Script -->
<script>
function showSlide(carousel, index) {
  const slides = carousel.querySelectorAll('.carousel-image');
  const dots = carousel.querySelectorAll('.dot');
  slides.forEach((s, i) => s.classList.toggle('active', i === index));
  dots.forEach((d, i) => d.classList.toggle('active', i === index));
  carousel.dataset.current = index;
}
function nextSlide(btn) {
  const carousel = btn.closest('.custom-carousel');
  let index = parseInt(carousel.dataset.current || 0);
  const slides = carousel.querySelectorAll('.carousel-image');
  showSlide(carousel, (index + 1) % slides.length);
}
function prevSlide(btn) {
  const carousel = btn.closest('.custom-carousel');
  let index = parseInt(carousel.dataset.current || 0);
  const slides = carousel.querySelectorAll('.carousel-image');
  showSlide(carousel, (index - 1 + slides.length) % slides.length);
}
function goToSlide(dot, index) {
  const carousel = dot.closest('.custom-carousel');
  showSlide(carousel, index);
}

document.addEventListener("DOMContentLoaded", function() {
  document.querySelectorAll('.product-card').forEach(card => {
    const carousel = card.querySelector('.custom-carousel');
    if (!carousel) return;
    let interval = null;

    card.addEventListener('mouseenter', () => {
      let index = parseInt(carousel.dataset.current || 0);
      interval = setInterval(() => {
        const slides = carousel.querySelectorAll('.carousel-image');
        index = (index + 1) % slides.length;
        showSlide(carousel, index);
      }, 2500);
    });
    card.addEventListener('mouseleave', () => clearInterval(interval));

    let startX = 0;
    carousel.addEventListener('touchstart', e => { startX = e.touches[0].clientX; });
    carousel.addEventListener('touchend', e => {
      const endX = e.changedTouches[0].clientX;
      const diff = endX - startX;
      if (Math.abs(diff) > 50) {
        if (diff < 0) nextSlide({closest: () => carousel});
        else prevSlide({closest: () => carousel});
      }
    });
  });
});
</script>
